// Datasource configured for Vercel Postgres via DATABASE_URL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  image     String?
  lists     List[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model List {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String
  type      ListType
  items     ListItem[]
  createdAt DateTime @default(now())
}

model ListItem {
  id         String    @id @default(cuid())
  list       List      @relation(fields: [listId], references: [id])
  listId     String
  mediaType  MediaType
  tmdbId     Int
  createdAt  DateTime  @default(now())

  @@unique([listId, tmdbId])
}

enum ListType {
  watchlist
  custom
}

enum MediaType {
  movie
  tv
}


